.bg-1 {
  box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
  background-color: #fff;
}
.bg-2 {
  background-color: #fff;
  box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
}
.page-container {
  max-width: 1600px;
  padding: 16px;
  margin: auto;
  min-height: calc(100vh - 70px);
}
.pointer {
  cursor: pointer;
}
.d-flex {
  display: flex;
}
.mb-0 {
  margin-bottom: 0;
}
.mt-0 {
  margin-top: 0;
}
.m-0 {
  margin: 0;
}
.d-flex-center {
  display: flex;
  justify-content: center;
}
